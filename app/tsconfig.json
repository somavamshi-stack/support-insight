{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "incremental": true,
        "module": "esnext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "sourceMap": true,
        "jsx": "preserve",
        "baseUrl": "src",
        "paths": {
            "@assets/*": ["assets/*"],
            "@atoms": ["components/atoms/index.ts"],
            "@constants": ["constants/index.ts"],
            "@molecules": ["components/molecules/index.ts"],
            "@organisms": ["components/organisms/index.ts"],
            "@templates": ["components/templates/index.ts"],
            "@types": ["types/index.ts"],
            "@utils": ["utils/index.ts"],
            "@context/*": ["context/*"],
            "@redux/*": ["redux/*"],
            "@hooks": ["hooks/index.ts"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strictNullChecks": true
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
